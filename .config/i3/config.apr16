# /* ex: set filetype=sh: */
export STDHOME_OUTPUTS='
set $ol HDMI-2
set $oc HDMI-2
set $or HDMI-2
exec xrandr --output "$oc" --primary
'

export STDHOME_TOGGLE='
bindsym --release $mod+v exec mri3-toggle-orientation.py # <= 4.11-1
#bindsym --release $mod+v split toggle # new since 4.12
'
export STDHOME_TAIL='
exec --no-startup-id  x11vnc -display :0 -shared -forever
gaps outer 0
gaps inner 12
'
export STDHOME_FONT='
font pango:Monospace Regular 10
'
export gaps_inner=6
export bar_height=20

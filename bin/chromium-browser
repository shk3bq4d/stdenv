#!/usr/bin/env bash

#source ~/.std*aliases
set -x
ARGS="--allow-legacy-extension-manifests --debug-print"
SCALE="1.4"
USE_FIREFOX=0
case $(timeout 2 hostname -f) in \
dec17.ly.lan)
	#if true; then # last exit day at KS
	if false; then # last exit day at KS
		PROXYPAC=
	else
		PROXYPAC="http://127.0.0.1:57155/proxy.pac.dec17.py"
		~/bin/container-ip.sh
		docker ps | awk-print1.sh | grep -qw mrlighttpd || ~/git/$(whoami)/docker/mrlighttpd/run.sh
	fi
	;;
nov20.ly.lan)
	PROXYPAC="http://127.0.0.1:57155/proxy.pac.nov20.py"
	SCALE="1.1"
	~/bin/container-ip.sh
	docker ps | awk-print1.sh | grep -qw mrlighttpd || ~/git/$(whoami)/docker/mrlighttpd/run.sh
	;;
may19*)
	PROXYPAC="http://127.0.0.1:57155/proxy.pac.may19.py"
	~/bin/container-ip.sh
	docker ps | awk-print1.sh | grep -qw mrlighttpd || ~/git/$(whoami)/docker/mrlighttpd/run.sh
	SCALE=1.16
	;;
apr16.ly.lan)
	PROXYPAC="http://127.0.0.1:57155/proxy.pac.apr16.py"
	ARGS="$ARGS --disable-gpu"
	~/bin/container-ip.sh
	docker ps | awk-print1.sh | grep -qw mrlighttpd || ~/git/$(whoami)/docker/mrlighttpd/run.sh
	;;
*.ly.lan)
	PROXYPAC="http://10.1.1.92/websupport/proxy.pac.ly.py"
	;;
*ocorp.local)
	PROXYPAC="http://127.0.0.1/websupport/proxy.ubuntu.pac.py"
	PROXYPAC=""
	;;
*)
	PROXYPAC="http://127.0.0.1:57155/proxy.ks.pac.py"
	#PROXYPAC="file://$HOME/proxy.pac"
	;;
esac
ARGS=" --force-device-scale-factor=$SCALE $ARGS "
# http://www.useragentstring.com/pages/useragentstring.php?name=Firefox
# http://www.useragentstring.com/pages/useragentstring.php?name=chrome
UA=""
UA="Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/ 71.0.3578.98 Safari/537.36"
UA="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/70.0.3538.77 Safari/537.36"
UA="Mozilla/5.0 (hihi)"
UA="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/95.0.4638.54 Safari/537.36"
f=~/bin/notinpath/chrome-win-stable-latest-version.sh-chromium-browser
if [[ -f $f ]] && grep -qEx '[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+' $f; then
	UA="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/$(< $f) Safari/537.36"
fi
#echo $PROXYPAC > /tmp/buou1
#exit 0
if (( $USE_FIREFOX )); then
	BIN=/usr/bin/firefox
	#test -f $BIN || BIN=/usr/bin/chromium-browser
	if [[ -z "$PROXYPAC" ]]; then
		$BIN $ARGS -P r4p                           "$@" </dev/null &>/dev/null &
	else
		$BIN $ARGS -P r4p </dev/null &>/dev/null &
		#$BIN $ARGS -P r4p --proxy-pac-url=$PROXYPAC "$@" #</dev/null &>/dev/null &
	fi

else
	BIN=/usr/bin/chromium
	test -f $BIN || BIN=/usr/bin/chromium-browser
	if [[ -z "$PROXYPAC" ]]; then
		$BIN $ARGS --user-agent="$UA" --profile-directory=r4p                           "$@" #</dev/null &>/dev/null &
	else
		$BIN $ARGS --user-agent="$UA" --profile-directory=r4p --proxy-pac-url=$PROXYPAC "$@" #</dev/null &>/dev/null &
	fi
fi
